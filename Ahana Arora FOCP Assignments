#include <stdio.h>

int main() {
    char word[] = "PROGRAM";  
    char guess;               
    int chances = 4;          
    int correct = 0;          
    int i, length = 7;        
    int found;                
    printf("Welcome to Hangman Game!\n");
    while (chances > 0 && correct < length) {
        printf("\nCurrent word: ");
        for (i = 0; i < length; i++) {
            if (word[i] == guess) {
                printf("%c", word[i]);
            } else {
                printf("_");
            }
        }
        printf("\nYou have %d chances left.\n", chances);
        printf("Enter your guess (single letter): ");
        scanf(" %c", &guess);  
        found = 0;
        for (i = 0; i < length; i++) {
            if (word[i] == guess) {
                found = 1;
                correct++;
            }
        }
        if (!found) {
            chances--;
            printf("Wrong guess! You lose one chance.\n");
        }
        if (correct == length) {
            printf("\nCongratulations! You guessed the word: %s\n", word);
        }
        if (chances == 0) {
            printf("\nGame over! The correct word was: %s\n", word);
        }
    }
    return 0;
}
