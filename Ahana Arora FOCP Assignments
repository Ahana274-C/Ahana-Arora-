#include <stdio.h>
#include <stdlib.h>
int main() {
    int Choice,compChoice;
    printf("Rock, Paper, Scissors Game\n");
    printf("Enter 0 for Rock. 1 for Paper, 2 for Scissors: ");
    scanf("%d", &Choice);
    if (Choice < 0 || Choice > 2) { 
        printf("Invalid choice! Please choose 0. 1. or 2.\n");
        return 1;
    }
    printf("You chose: ");
    if (Choice == 0) {
       printf("Rock\n");}
    else if (Choice==1){
       printf("Paper\n");}
    else if (Choice==2){
       printf("Scissors\n");}
    printf("computer choose");
    if (compChoice == 0) {
       printf("Rock\n");}
    else if (compChoice == 1){
       printf("Paper\n");}
    else if (compChoice==2){
       printf("Scissors\n");}
    if (Choice==compChoice) {
       printf("It's a tie!\n");} 
    else if ((Choice==0 && compChoice==2) ||
             (Choice==1 && compChoice==0)||
             (Choice==2 && compChoice==1)) {
        printf("You win!\n");

    } else {
        printf("Computer wins!\n");
    }

    return 0;
}
